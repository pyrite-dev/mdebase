# This file should be copied to .config/milkwm/milkwmrc

Window: {
	TitleBar: {
		Buttons: {
			# Ordered from left to right
			Left = [
				"Close"
			];

			# Ordered from right to left
			Right = [
				"Maximize",
				"Iconify"
			];
		};
		Active: {
			Background: {
				From = "#435f7e";
				To = "#0a284b";
			};
			Foreground = "white";
		};
		Inactive: {
			# Just don't write anything if you want default background/foreground
 			Background: {
				From = "#a0a0a0";
				To = "#cdcdcd";
			};
		};

		# Left, Right, or Center
		# Default is Center
		Align = "Left";
	};
};
