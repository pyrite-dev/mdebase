#!/bin/sh

kill_all () {
	kill $1 $PANEL $WM
}

stop_all () {
	kill_all
	exit
}

reload_all () {
	kill_all -HUP
}

start_all () {
	"@CMAKE_INSTALL_FULL_BINDIR@/mpanel" &
	PANEL="$!"

	"@CMAKE_INSTALL_FULL_BINDIR@/milkwm" &
	WM="$!"
}

trap "stop_all" INT
trap "stop_all" TERM
trap "reload_all" HUP

start_all

while true; do
	wait
done
